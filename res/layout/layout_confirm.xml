<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:baselineAligned="true"
    android:background="@color/layout_color"
    android:orientation="horizontal" >
    
     <ImageView
            android:id="@+id/confirmImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="2dp"
            android:contentDescription="@string/tagImage"
            android:scaleType="centerCrop"
            android:src="@drawable/icon" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/confirmProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/background_color"
            android:textStyle="bold" />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/space"           
            />
            
        <TextView
            android:id="@+id/confirmPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold" 
            android:textColor="@color/background_color"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/confirmQuantityWished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/supplyQuantity"
            android:textStyle="bold" 
            android:textColor="@color/background_color"/>
        
        <TextView
            android:id="@+id/confirmValueQuantityWished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/background_color"
            android:textStyle="bold" />          
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/confirmQuantityRemained"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quantityRemained"
            android:textStyle="bold" 
            android:textColor="@color/background_color"/>
        
        <TextView
            android:id="@+id/confirmValueQuantityRemained"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/background_color"
            android:textStyle="bold" />
            
            
        </LinearLayout>
        
    </LinearLayout>
    
    
    
    
    
    
    

</LinearLayout>